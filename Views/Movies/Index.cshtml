@model IEnumerable<Movie>

@{
    ViewData["Title"] = "List of Movies";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.css" integrity="sha512-phGxLIsvHFArdI7IyLjv14dchvbVkEDaH95efvAae/y2exeWBQCQDpNFbOTdV1p4/pIa/XtbuDCnfhDEIXhvGQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.ImageURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="align-middle img-responsive">
                            <img class="rounded-circle animate__animated animate__rubberBand " src="@item.ImageURL" alt="@item.Name" style="max-width: 150px;" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td class="align-middle">@Html.DisplayFor(m => item.Description)</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary text-primary "><i class="bi bi-pencil-square ml-2"></i>Edit</a>|
                            <a class="btn btn-outline-info text-info "><i class="bi bi-book ml-2"></i>Details</a>|
                            <a class="btn btn-outline-danger text-danger"><i class="bi bi-archive ml-2 "></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    </div>


</div>

